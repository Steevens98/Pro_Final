<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>

<BorderPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.prueba.ViewContactController">
    <top>
        <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Vista de Contacto" textAlignment="CENTER" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin></Text>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnFotoAnterior" text="←" />
                <Button fx:id="btnFotoSiguiente" text="→" />
            </HBox>

            <VBox fx:id="vboxContactos" spacing="10" />
        </VBox>
    </center>
    
    
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="btnAtras" text="Atrás" />
            <Button fx:id="btnEditar" text="Editar" />
            <Button fx:id="btnSiguiente" text="Siguiente" />
            <Button fx:id="btnAtras2" onAction="#switchAtras" text="Atrás" />
        </HBox>
    </bottom>
</BorderPane>
